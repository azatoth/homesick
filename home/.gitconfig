[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[color]
	ui = auto
	branch = auto
	diff = auto
	grep = auto
	decorate = auto
	interactive = auto
	showbranch = auto
	status = auto
[color "diff"]
	whitespace = red reverse
[core]
	whitespace=-indent-with-non-tab,trailing-space,cr-at-eol,space-before-tab
	pager = less -+$LESS -R
	quotepath = false
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	df = diff
	lg = log -p
	b = branch
    addnw = !sh -c 'git diff -U0 -w --no-color "$@" | git apply --cached --ignore-whitespace --unidiff-zero -'
[merge]
	tool = meld
	conflictstyle = diff3
[user]
	name = Carl FÃ¼rstenberg
[apply]
	whitespace = fix
[tar "tar.xz"]
	command = xz -c
[push]
	default = simple
[include]
	path = ~/.gitconfig.local
[fetch]
	prune = true
[credential]
	helper = !aws --profile ps-sandbox codecommit credential-helper $@
	UseHttpPath = true
[cola]
	spellcheck = false
